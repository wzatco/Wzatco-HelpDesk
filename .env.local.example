# Database
DATABASE_URL="file:./dev.db"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-change-in-production-min-32-chars"

# Google OAuth (for Widget Authentication)
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# AI Providers (Choose one or configure fallback)
# OpenAI
OPENAI_API_KEY="sk-your-openai-api-key"

# Anthropic Claude (Alternative)
ANTHROPIC_API_KEY="sk-ant-your-anthropic-api-key"

# Email Configuration (for OTP and notifications)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"
EMAIL_FROM="noreply@yourdomain.com"

# Twilio (for SMS OTP - optional)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Application Settings
NODE_ENV="development"
PORT="3000"

# Widget Settings
WIDGET_DOMAIN="localhost:3000"

# File Upload Settings
MAX_FILE_SIZE_MB="10"
UPLOAD_DIR="./uploads"

# Socket.IO Settings
SOCKET_PORT="3001"

# Additional Integrations
# Add your custom integration keys here
